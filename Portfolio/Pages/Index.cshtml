@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Portfolio</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-700 text-gray-900 font-sans">
    <!-- Hero Section -->
    <section class="bg-gray-200 py-20">
        <div class="max-w-5xl mx-auto text-center">
            <h2 class="text-4xl font-extrabold mb-4">Hi, I'm Victor Kiamba Mutiso</h2>
            <p class="text-xl mb-6">A passionate developer/designer focused on building effective digital solutions.
            </p>
            <a href="#projects"
                class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 transition">See
                My Work</a>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-16 bg-gray-200">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h3 class="text-3xl font-bold mb-4">About Me</h3>
            <p class="text-lg text-gray-700">I'm a Software developer with experience in Full Stack Software Development
                using .NET(C#), Laravel/Yii2.0(PHP),# and Django(Python). I
                love solving problems and bringing ideas to life through code and design.</p>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="bg-gray-200 py-16">
        <div class="max-w-6xl mx-auto px-4 bg-gray-200">
            <h3 class="text-3xl font-bold text-center mb-12">Projects</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Project Card -->
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h4 class="text-xl font-semibold mb-2">Blockchain Crowdfunding Platform</h4>
                    <p class="text-gray-700 mb-4">A Blockchain-based Crowdfunding web application that facilitates
                        raising of cryptocurrency towards a campaign.</p>
                    <a href="https://github.com/Ragervic/blockchaincrowdfundingproject"
                        class="text-blue-600 hover:underline">View Project</a>
                </div>

                <div class="bg-white shadow-md rounded-lg p-6">
                    <h4 class="text-xl font-semibold mb-2">CLI-Based Calculator Application(Collaboration)</h4>
                    <p class="text-gray-700 mb-4">A Console-Calculator built using .NET(C#) that supports different
                        arithmetic operations.</p>
                    <a href="https://github.com/RecurssiveLabs/Console-Calculator"
                        class="text-blue-600 hover:underline">View Project</a>
                </div>

                <div class="bg-white shadow-md rounded-lg p-6">
                    <h4 class="text-xl font-semibold mb-2">A Bookstore Application(MERN) </h4>
                    <p class="text-gray-700 mb-4">A bookstore MERN frontend application for viewing and browsing books.
                    </p>
                    <a href="https://github.com/Ragervic/bookstore-V--MERN-app-frontend"
                        class="text-blue-600 hover:underline">View Project</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section id="contact" class="py-16 bg-blue-600 text-white text-center">
        <h3 class="text-3xl font-bold mb-4">Let's Work Together</h3>
        <p class="mb-6">Feel free to reach out if you're interested in collaborating, have career projects in mind, or
            job opportunities.</p>
        <a href="mailto:mutisov261@gmail.com"
            class="inline-block px-6 py-3 bg-white text-blue-600 font-semibold rounded hover:bg-gray-100 transition">Contact
            Me</a>
    </section>

    <!-- Footer -->
    <footer class="py-6 text-center text-sm text-gray-500">
        © 2025 Victor Kiamba Mutiso. All rights reserved.
    </footer>

</body>

</html>
