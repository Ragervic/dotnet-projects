<form class="row g-3">
    <div class="col-auto">
        <input type="text" class="form-control" id="filter" placeholder="Search..." @bind="filter">
    </div>
    <div class="col-auto">
        <button type="button" class="btn btn-primary mb-3" @onclick="HandleSearch">Search</button>
    </div>
</form>

@code {
    private string filter = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private async Task HandleSearch()
    {
        await OnSearch.InvokeAsync(filter);
    }
}
